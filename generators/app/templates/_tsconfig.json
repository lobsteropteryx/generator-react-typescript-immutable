{
    "compilerOptions": {
        "module": "amd",
        "declaration": true,
        "noImplicitAny": true,
        "target": "ES5",
        "jsx": "react",
        "sourceMap": true,
        "out": "./dist/<%= name %>.js"
    },
    "filesGlob": [
        "./src/app/**/*.*"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "src/test"
    ]
}
